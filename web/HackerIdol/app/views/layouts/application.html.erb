<!DOCTYPE html>
<html>
<head>
  <title>Hacker Idol</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Hacker Idol</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
        <% if session[:participant_id].blank? %>
        <%= form_for :participant, url: '/', :html => {class: 'navbar-form navbar-right' } do |f| %>
            <div class="form-group">
            <%= f.text_field :name, :class => 'form-control', :placeholder => 'Name' %>
            </div>
            <div class="form-group">
              <%= f.password_field :password, :class => 'form-control', :placeholder => 'Password' %>
            </div>
            <button type="submit" class="btn btn-success">Sign in</button>
            <a href="/register" class="btn btn-info">Register</a>
          <% end %>
        <% else %>
        <%= form_for :search, method: 'get', url: '/search', :html => {class: 'navbar-form navbar-right' } do |f| %>
            <div class="form-group">
              <%= f.text_field :skill, :class => 'form-control', :placeholder => 'Skill' %>
            </div>
            <button type="submit" class="btn btn-success">Search</button>
            <a href="/logout" class="btn btn-info">Logout</a>
          <% end %>
        <% end %>
        </div><!--/.navbar-collapse -->
      </div>
    </nav>

    <!-- Main jumbotron for a primary marketing message or call to action -->
    
      <%= yield %>
  </body>
</html>
